<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="10.0.0" />
    <PackageReference Include="Npgsql.EntityFrameworkCore.PostgreSQL" Version="10.0.0" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.5.0" />
    <PackageReference Include="BCrypt.Net-Next" Version="4.0.3" />
  </ItemGroup>
  <ItemGroup>
    <!-- prevent compiling the nested API project files to avoid duplicate types -->
    <Compile Remove="SistemaDeEventos.API\**\*.cs" />
    <None Remove="SistemaDeEventos.API\**\*" />
    <Content Remove="SistemaDeEventos.API\**\*" />
    <!-- exclude unit test files from build, they belong to separate test project -->
    <Compile Remove="SistemaDeEventos.Tests\**\*.cs" />
    <None Remove="SistemaDeEventos.Tests\**\*" />
    <Content Remove="SistemaDeEventos.Tests\**\*" />
  </ItemGroup>

</Project>
